@{
    ViewData["Title"] = "Lets Work Together";
}
<h1>@ViewData["Title"]</h1>

<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <h1>Contact Me</h1>
            <p class="lead">I am a Software Engineer and Power BI Data Analyst who loves collaborating with companies and fellow engineers on innovative projects. I specialize in creating and designing user-friendly websites, developing Web APIs, managing databases efficiently, generating insightful national and international sales reports, and providing professional English-Spanish translation services.</p>
        </div>

        <div class="row" >
            <!-- Contact Details -->
            <div class="col-md-2 mb-5" style="width: 60%; height: 20%; padding-block:auto">
                <h4>Contact Information</h4>
                <ul class="list-unstyled" style="width: 170%; padding: 5%">
                    <li><i class="fas fa-envelope"></i> <a href="mailto:gustavo.larcoj@gmail.com">gustavo.larcoj@gmail.com</a></li>
                    <li><i class="fas fa-phone"></i> <a href="tel:+17372876304">737-287-6304</a></li>
                    <li><i class="fas fa-map-marker-alt"></i> Austin, TX</li>
                    <li><i class="fab fa-linkedin"></i> <a href="https://www.linkedin.com/in/gustavo-larco/" target="_blank">LinkedIn</a></li>
                    <li><i class="fab fa-github"></i> <a href="https://github.com/GustavoLarcoDev" target="_blank">GitHub</a></li>
                </ul>
            </div>

            <img src="~/Gustavo.jpeg" class="img-fluid img-thumbnail rounded-circle position-static " alt="Contact Image" style="width: 30%; height: 40%; padding-block:auto">
            <div class="container-fluid" style="width: 100%">
                <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-blue" style="width: 29%">GO</div>
                </div>
                <div class="progress" role="progressbar" aria-label="Info example" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-info text-dark" style="width: 50%">CSS</div>
                </div>
                <div class="progress" role="progressbar" aria-label="Warning example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-success-subtle text-dark" style="width: 60%">TypeScript</div>
                </div>
                <div class="progress" role="progressbar" aria-label="Warning example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-success text-dark" style="width: 80%">Python</div>
                </div>
                <div class="progress" role="progressbar" aria-label="Warning example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-warning text-dark" style="width: 80%">JavaScript</div>
                </div>
                <div class="progress" role="progressbar" aria-label="Warning example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-$indigo-800 text-dark" style="width: 90%">C#</div>
                </div>
                <div class="progress" role="progressbar" aria-label="Danger example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-danger" style="width: 100%">HTML</div>
                </div>

            </div>
           
      
            <!-- Contact Form -->
            <div class="col-md-6">
                <h4>Get in Touch</h4>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter your name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" placeholder="Enter your phone number">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="Write your message here"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
            
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Portfolio Gustavo Larco
        </div>
    </footer>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
