@model PortfolioMvc.Models.Projects

@{
    ViewData["Title"] = "Details";
}
<style>
    .details-container {
        background-color: rgba(0, 0, 0, 0.8); /* Fondo semitransparente */
        padding: 20px;
        border-radius: 10px;
        max-width: 600px;
        width: 90%;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
    }

        .details-container h4 {
            text-align: center;
            color: #f8f9fa; /* Blanco brillante */
            margin-bottom: 20px;
        }

        .details-container dt {
            font-weight: bold;
            margin-top: 10px;
            color: #ffc107; /* Amarillo claro */
        }

        .details-container dd {
            margin-left: 20px;
            margin-bottom: 10px;
            color: #f8f9fa;
            word-wrap: break-word; /* Ajusta enlaces largos */
            overflow-wrap: anywhere;
        }

        .details-container img {
            height: 150px;
            width: 200px;
            object-fit: cover;
            border-radius: 5px;
        }

    .btn {
        margin-top: 10px;
    }

</style>
<h1>Details</h1>
<body style="background-image: url('/codingbackground.gif');
        background-color: rgba(255, 255, 255, 0.8);
        background-size: cover;
        background-position: center;
        background-repeat: repeat;
        height: 100%;
        display: flex;
        flex-direction: column;">
    <div>
        <div class="details-container">
            <h4>PowerBi</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd class="col-sm-10">
                    <img src="@Model.Image" class="card-img-top" alt="@Model.Title"
                         style="height: 150px; width: 200px; object-fit: cover;">
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReleaseDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Code)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Code)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Context)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Context)
                </dd>
            </dl>
        </div>
    </div>
    <div>
        @* <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>  *@
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </div>
</body>
