@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Diseño general */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Secciones */
    .section {
        width: 48%;
        height: 300px;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        position: relative;
        background-size: cover;
        background-position: center;
        color: white;
        overflow: hidden;
    }

        .section h2 {
            font-size: 2.5rem;
            margin-bottom: 15px;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
        }

        .section p {
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 20px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
        }

    .left {
        background-image: url('/codingbackground.gif');
    }

    .right {
        background-image: url('/background.gif');
    }

    /* Hover */
    .section:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    /* Imagen */
    .align-content-center img {
        width: 100%;
        max-width: 200px;
        height: auto;
        border-radius: 50%;
        border: 4px solid #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    /* Footer */

    
    .container {
        flex-direction: column;
        align-items: center;
    }

    .section {
        width: 100%;
        height: 250px;
        margin-bottom: 15px;
    }

    .align-content-center img {
        max-width: 150px;
    }
</style>

<body>
    <div class="container">
        <a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Projects">
            <div class="section left" id="code">
                <h2>Code</h2>
                <p>Explore my work in software engineering, with a focus on full-stack development, web applications, and more.</p>
            </div>
        </a>

        <div class="align-content-center">
            <img src="~/Gustavo.jpeg" class="img-fluid img-thumbnail rounded-circle position-static" alt="Contact Image">
        </div>

        <a class="nav-link text-dark" asp-area="" asp-controller="PowerBi" asp-action="Index">
            <div class="section right" id="data-analyst">
                <h2>Data Analyst</h2>
                <p>Discover my projects in data analysis, visualization, and business intelligence using Power BI, Python, and more.</p>
            </div>
        </a>
    </div>
</body>

<footer class="border-top footer text-muted">
    <div class="container2">
        &copy; 2024 - Portfolio Gustavo Larco
    </div>
</footer>
